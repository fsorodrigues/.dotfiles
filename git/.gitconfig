	email = fsorodrigues@gmail.com
	signingkey = /home/fsorodrigues/.ssh/id_ed25519.pub
[core]
	excludesfile = /home/fsorodrigues/.gitignore_global
  pager = delta

[interactive]
  diffFilter = delta --color-only

